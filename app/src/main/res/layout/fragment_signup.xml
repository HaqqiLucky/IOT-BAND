<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:gravity="center"
    tools:context=".SignupFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25.98dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Sign Up" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/full_name"
        android:layout_width="359dp"
        android:layout_height="54dp"
        android:background="#F8FAFC"
        app:boxStrokeColor="#00000000"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:hint="Full Name">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:fontFamily="@font/opensans_regular"
            android:textSize="13.47sp"
            android:layout_height="wrap_content"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email"
        android:layout_width="359dp"
        android:layout_height="54dp"
        android:background="#F8FAFC"
        app:boxStrokeColor="#00000000"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:hint="Email">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:fontFamily="@font/opensans_regular"
            android:textSize="13.47dp"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phone"
        android:layout_width="359dp"
        android:layout_height="54dp"
        android:background="#F8FAFC"
        app:boxStrokeColor="#00000000"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:hint="Phone">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:fontFamily="@font/opensans_regular"
            android:textSize="13.47dp"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="359dp"
        android:layout_height="54dp"
        android:background="#F8FAFC"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        app:passwordToggleEnabled="true"
        android:hint="Password">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13.47dp"
            android:fontFamily="@font/opensans_regular"/>

    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/checkbox_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:button="@drawable/checkbox"
        android:text="   By continuing you accept our Privacy Policy"
        android:textSize="11.55sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signup"
        android:layout_width="345.46dp"
        android:layout_height="52.93dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Sign Up"
        android:textColor="@android:color/white"
        android:textSize="16.36sp"
        app:backgroundTint="@color/enable_disable"
        app:cornerRadius="2dp" />
    
<!--    <CheckBox-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="By continuing you accept our Privacy Policy"-->


</LinearLayout>