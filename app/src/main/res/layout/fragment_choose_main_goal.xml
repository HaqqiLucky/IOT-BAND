<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FFFFFF"
tools:context=".ChooseMainGoalFragment">

<LinearLayout
    android:id="@+id/content_container"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/continu">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="25.98dp"
        android:gravity="center"
        android:text="Choose main goal" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/gender_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/lose_weight"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:text="Lose weight"
            android:textColor="#0A0615"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15.4dp"
            app:cornerRadius="10dp"
            android:gravity="center|left"
            app:backgroundTint="@android:color/transparent"
            app:strokeColor="@color/button_stroke_selected_preferences"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/keep_fit"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:layout_marginTop="10dp"
            android:text="Keep fit"
            android:textColor="#0A0615"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15.4dp"
            app:cornerRadius="10dp"
            android:gravity="center|left"
            app:backgroundTint="@android:color/transparent"
            app:strokeColor="@color/button_stroke_selected_preferences"
            app:strokeWidth="1dp" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

</LinearLayout>

<com.google.android.material.button.MaterialButton
    android:id="@+id/continu"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:text="Continue"
    android:backgroundTint="#000000"
    android:layout_marginHorizontal="15dp"
    android:layout_marginBottom="50dp"
    app:cornerRadius="5dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
