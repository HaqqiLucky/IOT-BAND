<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:gravity="center"
    tools:context=".SigninFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25.98dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Sign In" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phone_email"
        android:layout_width="359dp"
        android:layout_height="54dp"
        android:background="#F8FAFC"
        app:boxStrokeColor="#00000000"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:hint="Phone / Email">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:fontFamily="@font/opensans_regular"
            android:textSize="13.47dp"
            android:layout_height="wrap_content"


            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="359dp"
        android:layout_height="54dp"
        android:background="#F8FAFC"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        app:passwordToggleEnabled="true"
        android:hint="Password">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13.47dp"
            android:fontFamily="@font/opensans_regular"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="345.46dp"
        android:layout_height="52.93dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Sign In"
        android:textColor="@android:color/white"
        android:textSize="16.36sp"
        app:backgroundTint="#010101"
        app:cornerRadius="2dp" />

    <TextView
        android:id="@+id/textViewForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:textSize="11.55dp"
        android:layout_marginTop="10dp"
        android:text="Forgot Password?" />

</LinearLayout>