<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:layout_gravity="left|top"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginLeft="19.58dp"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/namaUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kaedahara Kazuha"
            android:layout_gravity="left|top"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="19.58dp"
            android:fontFamily="@font/poppins_extrabold"
            android:textSize="24sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="327dp"
            android:layout_height="95dp"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="10dp"
            app:cardElevation="20dp"
            android:elevation="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Heart Rate"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/inter_regular"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txtLiveHeartRateHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/no_device_red"
                android:text="-- bpm"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Challenge"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="20sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/resaikelview_Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
