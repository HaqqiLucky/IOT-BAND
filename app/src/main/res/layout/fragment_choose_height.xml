<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FFFFFF"
tools:context=".ChooseHeightFragment">

<LinearLayout
    android:id="@+id/content_container"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/continu">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="25.98dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Select height" />

    <com.addisonelliott.segmentedbutton.SegmentedButtonGroup
        android:id="@+id/buttonGroup"
        android:layout_width="242.49dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="4dp"
        android:background="#F1F4F8"
        app:borderWidth="5dp"
        app:selectedBorderColor="#F1F4F8"
        app:dividerPadding="10dp"
        app:borderColor="#F1F4F8"
        app:radius="30dp">

        <com.addisonelliott.segmentedbutton.SegmentedButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_extrabold"
            android:padding="10dp"
            android:background="#F1F4F8"
            app:selectedBackground="#FFFFFF"
            app:selectedTextColor="#404B52"
            app:text="Feet"
            app:rounded="false"
            app:textColor="@color/black" />

        <com.addisonelliott.segmentedbutton.SegmentedButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F1F4F8"
            app:selectedBackground="#FFFFFF"
            android:fontFamily="@font/poppins_extrabold"
            android:padding="10dp"
            app:selectedTextColor="#404B52"
            app:text="Centimeter"
            app:rounded="false"
            app:textColor="@color/black" />

    </com.addisonelliott.segmentedbutton.SegmentedButtonGroup>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_text_height"
            android:layout_width="97.75dp"
            android:layout_height="62dp"
            android:background="@drawable/edit_text_weight_height"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:textSize="25.98sp"
            android:inputType="numberDecimal"
            android:maxLength="3"
            android:maxLines="1"
            android:textColor="@color/black"
            android:padding="10dp"/>


        <TextView
            android:id="@+id/ftcm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/opensans_regular"
            android:text="ft"
            android:textSize="15.4sp" />
    </LinearLayout>


</LinearLayout>

<com.google.android.material.button.MaterialButton
    android:id="@+id/continu"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:text="Continue"
    android:layout_marginHorizontal="15dp"
    android:layout_marginBottom="50dp"
    app:cornerRadius="5dp"
    app:backgroundTint="@color/enable_disable"
    android:textColor="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
