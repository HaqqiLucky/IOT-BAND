<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/welcome" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:background="@drawable/gradient_fade_welcome"/>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_extrabold"
        android:text="Welcome to Smart Band!"
        android:layout_gravity="center"
        android:textSize="20sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health is number one"
            android:fontFamily="@font/poppins_extrabold"
            android:textSize="20sp"
            android:layout_gravity="center"/>
<!--        <View-->
<!--            android:layout_width="20px"-->
<!--            android:layout_height="20px"-->
<!--            android:background="@drawable/health_rectangle_health"-->
<!--            android:layout_gravity="center_horizontal|bottom"/>-->
    </FrameLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_gravity="center"
        android:layout_width="345.46dp"
        android:layout_height="52.93dp"
        android:text="Login"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:cornerRadius="2dp"
        app:backgroundTint="#010101"/>

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Already have account? Sign in"/>


</LinearLayout>