<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:layout_gravity="left|top"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginLeft="19.58dp"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/namaUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kaedahara Kazuha"
            android:layout_gravity="left|top"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="19.58dp"
            android:fontFamily="@font/poppins_extrabold"
            android:textSize="24sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="327dp"
            android:layout_height="95dp"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="10dp"
            app:cardElevation="20dp"
            android:elevation="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Device"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/inter_regular"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/no_device_red"
                android:text="No Device"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="345dp"
            android:layout_marginTop="19dp"
            android:layout_height="180.69dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imagerunning"
                    android:layout_width="345dp"
                    android:layout_height="180.69dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/runnng_home"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_bold"
                    android:text="Running Information"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_medium"
                    android:textSize="16sp"
                    android:textColor="@color/putih_home"
                    android:layout_margin="20dp"
                    android:text="Half Marathon event held by Mandiri Bank Group"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>


                <ImageView
                    android:layout_width="42.46dp"
                    android:layout_height="42.51dp"
                    android:src="@drawable/outline_arrow_downward_24"
                    android:background="@drawable/circle_arrow_for_home"
                    android:rotation="320"
                    app:tint="@color/white"
                    android:layout_margin="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Activity"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="20sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/resaikelview_Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
