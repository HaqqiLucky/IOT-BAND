<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/back_arrow_baseline" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Pulse Measure History"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Recycler List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:paddingBottom="24dp" />

    <LinearLayout
        android:id="@+id/panelRPE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:background="#DD000000"
        android:visibility="gone">

        <Button
            android:id="@+id/btnVeryTired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sangat Lelah"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btnTired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lelah"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btnNotTired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak Lelah"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>
