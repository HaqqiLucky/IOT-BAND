<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".AgeFragment">

    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/continu">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="25.98dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Select age" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:backgroundTint="@color/red_time">

            <LinearLayout
            android:layout_width="97.78dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15.4sp"
                android:fontFamily="@font/opensans_regular"
                android:text="Month"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"/>

            <Spinner
                android:id="@+id/month"
                android:layout_width="97.78dp"
                android:layout_height="62dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/spinner_age"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="97.78dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15.4sp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Years"
                    android:layout_marginBottom="30dp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/year"
                    android:layout_width="97.78dp"
                    android:layout_height="62dp"
                    android:hint="1999"
                    android:textAlignment="center"
                    android:background="@drawable/spinner_age"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continu"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:text="Continue"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="50dp"
        app:cornerRadius="5dp"
        app:backgroundTint="@color/enable_disable"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>